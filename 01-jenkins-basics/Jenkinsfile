pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                sh '''
                # Clean up Python cache and create a virtual environment
                find . -name '__pycache__' -exec rm -rf {} +
                find . -name '*.pyc' -exec rm -rf {} +

                bash -c "
                python3 -m venv venv
                source venv/bin/activate
                pip install -r 01-jenkins-basics/requirements.txt
                "
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate
                # Run tests (replace with actual test command)
                pytest
                "
                '''
            }
        }

        stage('Deployment') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate
                # Deployment commands go here
                echo 'Deployment stage (replace with actual commands)'
                "
                '''
            }
        }
    }
}
