pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                sh '''
                # Use bash shell instead of sh
                bash -c "
                python3 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                "
                '''
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate
                # Run tests (replace with actual test command)
                pytest
                "
                '''
            }
        }

        stage('Deployment') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate
                # Deployment commands go here
                echo 'Deployment stage (replace with actual commands)'
                "
                '''
            }
        }
    }
}
