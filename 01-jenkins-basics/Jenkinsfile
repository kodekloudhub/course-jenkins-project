pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                sh '''
                # Remove cache files
                find . -name '__pycache__' -exec rm -rf {} +
                find . -name '*.pyc' -exec rm -rf {} +

                # Set up virtual environment
                bash -c "
                python3 -m venv venv
                source venv/bin/activate
                pip install -r 01-jenkins-basics/requirements.txt
                "

                # Check if jenkins-project directory and test_app.py file exist before attempting rename
                if [ -d "jenkins-project" ]; then
                    echo "jenkins-project directory exists."
                    if [ -f "jenkins-project/test_app.py" ]; then
                        echo "test_app.py exists, renaming it."
                        mv jenkins-project/test_app.py jenkins-project/test_jenkins_app.py
                    else
                        echo "test_app.py does not exist."
                    fi
                else
                    echo "jenkins-project directory does not exist."
                fi

                # Debug: List files in the workspace and jenkins-project directory
                echo 'Listing all files in the workspace:'
                ls -al
                if [ -d "jenkins-project" ]; then
                    echo 'Listing files in jenkins-project directory:'
                    ls -al jenkins-project/
                fi
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate

                # Debug: Check current working directory and list files
                echo 'Current working directory:'
                pwd
                echo 'Listing files in jenkins-project directory (if exists):'
                if [ -d 'jenkins-project' ]; then
                    ls -al jenkins-project/
                fi

                # Clear pytest cache, set PYTHONPATH, and run tests
                if [ -f 'jenkins-project/test_jenkins_app.py' ]; then
                    export PYTHONPATH=$(pwd)/jenkins-project
                    pytest --cache-clear --maxfail=1 --disable-warnings jenkins-project/test_jenkins_app.py
                else
                    echo 'Test file not found, skipping tests.'
                fi
                "
                '''
            }
        }

        stage('Deployment') {
            steps {
                sh '''
                bash -c "
                source venv/bin/activate
                # Deployment commands go here
                echo 'Deployment stage (replace with actual commands)'
                "
                '''
            }
        }
    }
}
